{
  "name": "robinhood-trading-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Robinhood automated trading bot components",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev": "npm run dev --workspace=packages/telegram-bot",
    "type-check": "tsc --build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "robinhood",
    "trading",
    "bot",
    "automation",
    "telegram",
    "mcp",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}
